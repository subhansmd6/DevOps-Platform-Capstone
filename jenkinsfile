pipeline {
    agent any

    tools {
        jdk 'JDK17'
        maven 'Maven3'
    }

    environment {
        DOCKER_IMAGE = "subhansmd6/java-app:${BUILD_NUMBER}"

        NEXUS_URL = "54.149.56.125:8081"
        NEXUS_REPO = "maven-releases"

        // Correct credentials
        NEXUS_CREDENTIALS = "nexus-details"
        SONAR_TOKEN = credentials('sonar-token')
    }

    stages {

        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/subhansmd6/Java-code.git'
            }
        }

        stage('Build') {
            steps {
                dir('LoginRegistration') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir('LoginRegistration') {
                    sh """
                        mvn sonar:sonar \
                        -Dsonar.projectKey=java-project \
                        -Dsonar.host.url=http://sonarqube1:9000 \
                        -Dsonar.login=${SONAR_TOKEN}
                    """
                }
            }
        }

        stage('Build WAR') {
            steps {
                dir('LoginRegistration') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Upload WAR to Nexus') {
    steps {
        dir('LoginRegistration') {
            withCredentials([usernamePassword(
                credentialsId: "${NEXUS_CREDENTIALS}", 
                usernameVariable: 'NEXUS_USER', 
                passwordVariable: 'NEXUS_PASS'
            )]) {
                sh """
                    mvn deploy -DskipTests \
                        -DaltDeploymentRepository=${NEXUS_REPO}::default::http://${NEXUS_USER}:${NEXUS_PASS}@${NEXUS_URL}/repository/${NEXUS_REPO}
                """
            }
        }
    }
}

        stage('Build Docker Image') {
    steps {
        dir('LoginRegistration') { // change to wherever Dockerfile is
            sh 'docker build -t subhansmd6/java-app:${BUILD_NUMBER} .'
        }
    }
}

        stage('Push Image to Docker Hub') {
            steps {
                withDockerRegistry([credentialsId: 'dockerhub-details', url: '']) {
                    sh 'docker push ${DOCKER_IMAGE}'
                }
            }
        }
    }

    post {
        success {
            echo "Successfully pushed Docker image: ${DOCKER_IMAGE}"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}

